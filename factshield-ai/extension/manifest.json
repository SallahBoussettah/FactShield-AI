{
    "manifest_version": 3,
    "name": "FactShield AI",
    "version": "1.0.0",
    "description": "AI-powered browser extension to detect misinformation in real-time",
    "icons": {
        "16": "assets/icon-16.png",
        "48": "assets/icon-48.png",
        "128": "assets/icon-128.png"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "assets/icon-16.png",
            "48": "assets/icon-48.png",
            "128": "assets/icon-128.png"
        }
    },
    "background": {
        "service_worker": "background/service-worker.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content/content-script.js"
            ],
            "css": [
                "content/content-styles.css"
            ]
        },
        {
            "matches": [
                "http://localhost:5173/*",
                "http://localhost:3000/*",
                "https://*.factshield-ai.com/*"
            ],
            "js": [
                "content/auth-bridge.js"
            ]
        }
    ],
    "options_page": "options/auth-settings.html",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "notifications",
        "alarms",
        "contextMenus",
        "tabs"
    ],
    "host_permissions": [
        "http://localhost:3001/*",
        "http://localhost:5173/*",
        "http://localhost:3000/*",
        "https://*.factshield-ai.com/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}